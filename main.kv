<MainScreen>:
    name: 'main'

    GridLayout:
        rows:2
        Label:
            text: 'Select your battle box game mode:'
            font_size: 40

        BoxLayout:
            Button:
                on_press:
                    app.root.current = 'deathmatch'
                    root.manager.transition.direction = 'left'
                text: 'Deathmatch'
                font_size: 24

