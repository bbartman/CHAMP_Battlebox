

<MediaScreenManager>
    LoadingScreen:
    MainScreen:
    DeathmatchScreen:
    SoccerScreen:
    RunSoccerScreen:
    RunDeathmatchScreen:
    MatchOver:
    WaitForPlayers:
    WaitForPlayersAndDoors:
    VictoryScreen:
    CountDownScreen:

<LoadingScreen@Screen>
    name:"LoadingScreen"
    GridLayout:
        cols: 1
        Label:
            text:"Loading..."
            font_size: 80

<MainScreen@Screen>
    name: "main"
    GridLayout:
        cols:1
        Image:
            id: gif
            source: 'media/SpinningCoin_50.gif'
            # center: self.parent.center
            allow_stretch: True
            anim_delay: 0
            anim_loop: 0

<DeathmatchScreen@Screen>:
    name: 'Deathmatch'
    GridLayout:
        cols: 1
        Image:
            source: "media/Deathmatch_Final.png"
            allow_stretch: True
            anim_delay: 0
            anim_loop: 0

<MatchScreen>
    GridLayout:
        cols: 1
        Label:
            id: time
            text:"Time"
            font_size: 300

<RunDeathmatchScreen@MatchScreen>
    name: 'RunDeathmatch'

<SoccerScreen@Screen>:
    name: 'Soccer'
    GridLayout:
        cols: 1
        Label:
            text:"Soccer"
            font_size: 80

<RunSoccerScreen@MatchScreen>
    name: "RunSoccer"


<MatchOver@Screen>
    name: 'MatchOver'
    GridLayout:
        cols: 1
        Label:
            text:"Pick a winner!"
            font_size: 80

<WaitForPlayers@Screen>
    name: 'WaitForPlayers'
    GridLayout:
        cols: 1
        Label:
            text:"Wait for players"
            font_size: 80

<WaitForPlayersAndDoors@Screen>
    name: 'WaitForPlayersAndDoors'
    GridLayout:
        cols: 1
        Label:
            text:"Wait for players and doors"
            font_size: 80

<VictoryScreen>
    name: 'VictoryScreen'
    id: victoryScreen
    on_enter:
        pymunk.init()
        pymunk.reset()
        pymunk.pos = 0, 0
    on_leave:
        pymunk.stop()
    FloatLayout:
        PymunkDemo:
            id: pymunk
            size_hint: [1, 1]
        Image:
            source:"media/LHSHorn.png"
            pos: -600, -350
        Image:
            source:"media/RHSHorn.png"
            pos: 600, -350

        GridLayout:
            cols: 1
            Label:
                text:"Some one won? Something Victory"
                id: victoryText
                font_size: 80

<CountDownScreen>
    name: "CountDownScreen"
    GridLayout:
        cols: 1
        CDLabel:
            id: counter
            text:"Count down"
            font_size: 300