

<MediaScreenManager>
    LoadingScreen:
    MainScreen:
    DeathmatchScreen:
    SoccerScreen:
    RunSoccerScreen:
    RunDeathmatchScreen:
    MatchOver:
    WaitForPlayers:
    WaitForPlayersAndDoors:
    VictoryScreen:
    CountDownScreen:

<LoadingScreen@Screen>
    name:"LoadingScreen"
    GridLayout:
        cols: 1
        Label:
            text:"Loading..."
            font_size: 80

<MainScreen@Screen>
    name: "main"
    GridLayout:
        cols:1
        Image:
            id: gif
            source: 'media/SpinningCoin_50.gif'
            # center: self.parent.center
            allow_stretch: True
            anim_delay: 0
            anim_loop: 0

<DeathmatchScreen@Screen>:
    name: 'Deathmatch'
    on_enter:
        app.soundboard.aplay(app.soundboard.deathmatch_screen)
        
    GridLayout:
        cols: 1
        Image:
            source: "media/Deathmatch_Final.png"
            allow_stretch: True
            anim_delay: 0
            anim_loop: 0



<RunDeathmatchScreen>
    name: 'RunDeathmatch'
    id:rdms
    dd_prog_value: 0
    on_pre_enter:
        rdms.dd_prog_value = 0
        ddDisplay.current = "nodd"
    GridLayout:
        cols: 1
        Label:
            size_hint:[1, .75]
            id: time
            text:"Time"
            font_size: 300
        ScreenManager:
            id: ddDisplay
            Screen:
                name: "nodd"
                size_hint:[1, 1]
            Screen:
                name: "dd"
                size_hint:[1, 1]
                GridLayout:
                    cols: 1
                    Label:
                        text:"Door Drop Progress"
                        font_size: 40
                    ProgressBar:
                        id:pb
                        max:1000
                        value:rdms.dd_prog_value
            Screen:
                name: "postdd"
                size_hint:[1, 1]
                GridLayout:
                    cols: 1
                    Label:
                        text:"Doors Are Open"
                        font_size: 40
<SoccerScreen@Screen>:
    name: 'Soccer'
    on_enter:
        app.soundboard.aplay(app.soundboard.soccer_screen)
    GridLayout:
        cols: 1
        Image:
            source:"media/SoccerLogo.PNG"
            allow_stretch: True

<RunSoccerScreen>
    name: "RunSoccer"
    id:rss
    ScreenManager:
        id:sm
        Screen:
            name: "scoreDisplay"
            GridLayout:
                cols: 1
                size_hint: [1, 1]
                GridLayout:
                    cols: 3
                    size_hint: [1, .3]
                    Label:
                        text: rss.red_team_name
                        font_size:80
                    Label:
                        text:""
                        font_size:10
                    Label:
                        text: rss.blue_team_name
                        font_size:80
                GridLayout:
                    cols: 3
                    size_hint: [1, .3]
                    Label:
                        text: str(rss.red_score)
                        font_size:80
                    Label:
                        text:"-"
                        font_size:150
                    Label:
                        text: str(rss.blue_score)
                        font_size:80
                Label:
                    id: time
                    text:str(round(rss.seconds, 1))
                    font_size: 300
        Screen:
            name:"redGoal"
            GridLayout:
                cols:1
                Label:
                    text:rss.red_team_name + "\nGOAL!!!!!"
                    font_size: 300
        Screen:
            name:"blueGoal"
            GridLayout:
                cols:1
                Label:
                    text:rss.blue_team_name + "\nGOAL!!!!!"
                    font_size: 300


<MatchOver@Screen>
    name: 'MatchOver'
    GridLayout:
        cols: 1
        Label:
            text:"Pick a winner!"
            font_size: 80

<BackgroundColor@Widget>
    background_color: [1, 1, 1, 1]
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
    background_color: [0, 0, 0, 0]
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0

<WaitForPlayers>
    name: 'WaitForPlayers'
    id:wfp
    GridLayout:
        cols: 1
        Label:
            size_hind: [1, .5]
            text:"PlayersReady"
            font_size: 80
        GridLayout:
            size_hind: [1, .5]
            cols:2
            BackgroundLabel:
                background_color: wfp.red_bg_color
                id: redReady
                text: "Red Ready?"
                font_size: 30
            BackgroundLabel:
                background_color: wfp.blue_bg_color
                id: blueReady
                text: "Blue Ready?"
                font_size: 30



<WaitForPlayersAndDoors>
    name: 'WaitForPlayersAndDoors'
    id:wfp
    GridLayout:
        cols: 1
        Label:
            text:"Wait for players and doors"
            font_size: 80
            size_hind: [1, .25]
        GridLayout:
            size_hind: [1, .75]
            cols:2
            BackgroundLabel:
                background_color: wfp.red_bg_color
                id: redReady
                text: "Red Ready?"
                font_size: 30
            BackgroundLabel:
                background_color: wfp.blue_bg_color
                id: blueReady
                text: "Blue Ready?"
                font_size: 30
            BackgroundLabel:
                background_color: wfp.red_door_bg_color
                id: redDoor
                text: "Red Door Closed"
                font_size: 30
            BackgroundLabel:
                background_color: wfp.blue_door_bg_color
                id: blueDoor
                text: "Blue Door Closed"
                font_size: 30


<VictoryScreen>
    name: 'VictoryScreen'
    id: victoryScreen
    on_enter:
        pymunk.init()
        pymunk.reset()
        pymunk.pos = 0, 0
    on_leave:
        pymunk.stop()
    FloatLayout:
        PymunkDemo:
            id: pymunk
            size_hint: [1, 1]
        Image:
            source:"media/LHSHorn.png"
            pos: -600, -350
        Image:
            source:"media/RHSHorn.png"
            pos: 600, -350

        GridLayout:
            cols: 1
            Label:
                text:"Some one won? Something Victory"
                id: victoryText
                font_size: 80

<CountDownScreen>
    name: "CountDownScreen"
    GridLayout:
        cols: 1
        CDLabel:
            id: counter
            text:"Count down"
            font_size: 300